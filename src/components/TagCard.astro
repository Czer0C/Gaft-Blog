---
type Tag = {
	title?: string
	posts: string[]
	slug: string
}
type Props = {
  tag: Tag
}

const { tag } = Astro.props

const {slug, title, posts} = tag

const url = `/tag/${slug}/`

---

<div class=" m-2 p-4 rounded-md relative">
		<a href={'#'} class="m-tag-card__link" aria-label={title}>

		<img width={180} height={100} class="w-full h-36 rounded-md opacity-50 aspect-video" src="http://testghost.mo.cloudinary.net/image/upload/q_80/v1/gaftonosh/2021/10/gaftonosh-placeholder-banner.webp" loading="lazy" alt="tag-placeholder">
		
		<div class="absolute w-full top-1/2 left-8 -translate-y-1/2">
			<h4 class="text-indigo-400 font-bold truncate">{title}</h4>
			<span class="m-tag-card__counter">
				{posts.length} post{posts.length > 1 ? "s" : ""}
			</span>
		</div>
	</a>

</div>